.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 20px;
    background-color: blue;
}

.exit-button {
    width: 100px;
    height: 40px;
    background-color: #ffcc00;
    color: black;
    border-radius: 5px;
    -unity-text-align: center;
}

.exit-button:hover {
    scale: 1.1;
}

.exit-button:active {
    scale: 0.95;
    background-color: #e6b800;
}
